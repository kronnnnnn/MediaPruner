# MediaPruner Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Debug mode (set to false in production)
MB_DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR
MB_LOG_LEVEL=INFO

# =============================================================================
# API KEYS
# =============================================================================

# TMDB API Key - Get from https://www.themoviedb.org/settings/api
# Required for movie/TV show metadata scraping
MB_TMDB_API_KEY=

# OMDb API Key - Get from https://www.omdbapi.com/apikey.aspx
# Optional, used as fallback for metadata
MB_OMDB_API_KEY=

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Server host and port
MB_HOST=0.0.0.0
MB_PORT=8000

# CORS Origins (JSON array format)
# In production, set this to your actual domain
MB_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# =============================================================================
# DATABASE
# =============================================================================

# SQLite database URL (async driver)
MB_DATABASE_URL=sqlite+aiosqlite:///./data/mediapruner.db

# =============================================================================
# FILE PATHS (for Docker, these can be mounted volumes)
# =============================================================================

# Data directory for database and cache
MB_DATA_DIR=./data

# Log directory
MB_LOG_DIR=./logs
